<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.7"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:id="@+id/textUserInfo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0"
            android:background="@drawable/grayborder"
            android:drawableLeft="@drawable/account_circle"
            android:gravity="center|left"
            android:text=" 8101998"
            android:textColor="#000000"
            android:textSize="20sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/localTrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/grayborder"
                android:clickable="true"
                android:gravity="left|center"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/lcLocalSongs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/audiotrack_ic"
                    android:layout_alignTop="@+id/txtLocalSongs"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                 />

                <TextView
                    android:id="@+id/txtLocalSongs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Local songs"
                    android:textColor="#000000"
                    android:textSize="18sp"

                    android:layout_toRightOf="@+id/lcLocalSongs"
                    android:layout_toEndOf="@+id/lcLocalSongs" />

                <TextView
                    android:id="@+id/numLocalSongs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="0 songs"
                    android:layout_alignBottom="@+id/lcLocalSongs"
                    android:layout_toRightOf="@+id/lcLocalSongs"
                    android:layout_toEndOf="@+id/lcLocalSongs" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/favoriteTrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/grayborder"
                android:clickable="true"
                android:gravity="left|center"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/icFavoriateSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/heart_ic"
                    android:layout_alignTop="@+id/txtLocalSongs"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/txtFavoriteSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Favorite songs"
                    android:textColor="#000000"
                    android:textSize="18sp"

                    android:layout_toRightOf="@+id/icFavoriateSong"
                    android:layout_toEndOf="@+id/icFavoriateSong" />

                <TextView
                    android:id="@+id/numFavoriteSongs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="0 songs"
                    android:layout_alignBottom="@+id/icFavoriateSong"
                    android:layout_toRightOf="@+id/icFavoriateSong"
                    android:layout_toEndOf="@+id/icFavoriateSong" />
            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="6.3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragmentLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/grayborder">

    </LinearLayout>



</LinearLayout>