<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/playerfragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:gravity="center"
        android:paddingLeft="5dp">

        <ImageView
            android:id="@+id/fragmentCoverArt"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_artcover" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2.75"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragmentTrackTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:maxLines="1"
            android:text="Chiec khan gio am"
            android:freezesText="false"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fragmentArtist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="15"
            android:freezesText="false"
            android:maxLines="1"
            android:text="Khanh Phuong"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center">

        <Button
            android:id="@+id/fragmentRepeat"
            android:layout_width="20dp"

            android:layout_height="20dp"
            android:background="@drawable/mediaplayer_repeat_all_ic" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center">

        <Button
            android:id="@+id/fragmentSuffle"
            android:layout_width="20dp"

            android:layout_height="20dp"
            android:background="@drawable/ic_shuffle" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:gravity="center">

        <Button
            android:id="@+id/fragmentPlayBtn"
            android:layout_width="40dp"

            android:layout_height="40dp"
            android:background="@drawable/pause_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:gravity="center">

        <Button
            android:id="@+id/fragmentNextBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/next_track_button" />
    </LinearLayout>



</LinearLayout>